@{
    ViewData["Title"] = "Home Page";
}

<div class="content_container">
    
    <p class="title_stile">Администрирование</p>
    
    <div class="admin_menu">
        @if(User.Identity.IsAuthenticated)
        {
            <p style="margin-bottom: 20px; font-size: 16px;">Вы вошли как: @User.Identity.Name</p>
        
            <form method="post" asp-controller="Account" asp-action="LogOff">
                <input type="submit" value="Выход" class="button-style" style="margin-bottom: 20px; width: 100px;"/>
            </form>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login">Вход</a>
            <a asp-controller="Account" asp-action="Register">Регистрация</a>
        }
        <!-- <a href="/Roles/Index" class="admin_menu_item">Управление ролями пользователей</a> -->
        <!-- <a href="/Users/Index" class="admin_menu_item">Управление аккаунтами пользователей</a> -->
        <a href="/Admin/Products" class="admin_menu_item">Товары</a>
        <a href="/Admin/Categories" class="admin_menu_item">Категории товаров</a>     
        <a href="/Admin/Orders" class="admin_menu_item">Заказы</a>    
        <a href="/Admin/AdminReviews" class="admin_menu_item">Отзывы</a> 
        <a href="/Admin/DeliveryMethods" class="admin_menu_item">Условия доставки</a> 
    </div>
</div>
