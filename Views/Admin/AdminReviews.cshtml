@model List<Review>

<div class="content_container">
    <p class="title_stile">Отзывы</p>
    <div class="admin_menu">
        <a href="/Admin/Index" class="admin_menu_item">Вернуться на главную</a>
    </div>

    <table class="products_table">
        <tr>
            <th colspan="2">
                Отзыв
            </th>
            <th>
                Действия
            </th>
        </tr>
            @foreach (var review in Model) {
                <tr>
                    <td>
                        <div class="reviews_item">
                            <div class="reviews_item_text">
                                <p>@review.Date</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="reviews_item">
                            <div class="reviews_item_text">
                                <h4>@review.ClientName</h4>
                                <p>@review.Text</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <a href="/Admin/ReviewRemove?id=@review.Id">Удалить</a>
                    </td>
                </tr>
            }
    </table>
</div>