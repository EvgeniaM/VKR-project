@model List<Category>

<div class="content_container">
    <p class="title_stile">Категории</p>
    <div class="admin_menu">
        <a href="/Admin/Index" class="admin_menu_item">Вернуться на главную</a>
        <a href="/Admin/CategoryAddEdit" class="admin_menu_item">Добавить категорию</a>
        <a href="/Admin/CategorysProducts?categoryId=@null" class="admin_menu_item">Просмотр товаров без категории</a>
    </div>
    

    <table class="products_table">
        <tr>
            <th>
                Название категории
            </th>
            <th>
                Действия
            </th>
        </tr>
        @foreach (var category in Model) {
            <tr>
                <td>
                    @category.Name
                </td> 
                <td>
                    <a href="/Admin/CategoryAddEdit?id=@category.Id">Редактировать</a>
                    <a href="/Admin/CategoryRemove?id=@category.Id">Удалить</a>
                    <a href="/Admin/CategorysProducts?categoryId=@category.Id">Просмотр товаров категории</a>
                </td>
            </tr>
        }
    </table>
</div>